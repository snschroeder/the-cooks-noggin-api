{
  "name": "rec-amal-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "migrate": "postgrator --config postgrator-config.js",
    "migrate:test": "env NODE_ENV=test npm run migrate",
    "migrate:production": "env SSL=true DATABASE_URL=$(heroku config:get DATABASE_URL) npm run migrate",
    "seed": "psql -U amal_admin -d recipe-amalgamator -f ./seeds/seed.tables.sql",
    "seed:test": "psql -U amal_admin -d recipe-amalgamator-test -f ./seeds/seed.tables.sql",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "mocha --require test/setup.js",
    "predeploy": "npm audit && npm run migrate:production",
    "deploy": "git push heroku master"
  },
  "keywords": [],
  "engines": {
    "node": "13.13.0"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.1",
    "morgan": "^1.10.0",
    "pg": "^8.0.3",
    "winston": "^3.2.1",
    "xss": "^1.0.6"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.3",
    "postgrator-cli": "^3.2.0",
    "supertest": "^4.0.2"
  }
}
